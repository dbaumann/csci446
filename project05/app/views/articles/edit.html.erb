<% content_for :body_tag do %>
    <body id="articles-edit">
<% end %>

<% content_for :subtitle do %>
&hellip; my cousin works for Bit.ly
<% end %>

<ul id="options-basic">
  <li>
    <%= link_to( image_tag('icons/arrow_left.png') + ' back',
        session[:last_visited_page],
        {:title => 'Go back to previous page', :class => 'top-link'}) %>
  </li>
</ul>

<h1>Editing "<%= @article_title %>"</h1>

<% form_for(@article) do |f| -%>
<%= render :partial => 'form', :locals => {:f => f} %>

<p>
<%= f.submit 'Save Changes' %>
</p>
<% end -%>
