<% content_for :body_tag do %>
    <body id="articles-edit">
<% end %>

<%= link_to( image_tag('silk_icons/arrow_left.png') + ' back',
    session[:last_visited_page],
    {:title => 'Go back to previous page', :class => 'top-link'}) %>
<br />
<h1>Editing "<%= @article_title %>"</h1>

<% form_for(@article) do |f| %>
  <%= f.error_messages %>

  <%= f.label :title %>
  <%= f.text_field :title %><br />
  
  <%= f.label :author_name %>
  <%= f.text_field :author_name %><br />
  
  <%= f.label :body %>
  <%= f.text_area :body %>

  <%= f.submit 'Save Changes' %>
<% end %>
