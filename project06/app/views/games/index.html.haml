- title "All Games"

- if @games.size > 0
  .paginate-controller= will_paginate @games
  %table#general-list
    %thead
      %tr
        %th Title
        %th Rating
    %tfoot
      %tr
        %td{:colspan => 2}
          = page_entries_info @games
    %tbody
      - for game in @games
        %tr
          %td= h game.title
          %td= h game.rating
          //%td= link_to 'Edit', edit_game_path(game)
- else
  %p There are no games in the database.

%p= link_to "New Game", new_game_path
