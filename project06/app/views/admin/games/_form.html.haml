- form_for [:admin, @game] do |f|
  = f.error_messages
  %p
    = f.label :title
    = f.text_field :title
  %p
    = render :partial => 'games/rating', :locals => { :f => f }
  %p
    = f.label :user_id
    = f.select :user_id, @users.collect { |user| [user.to_s, user.id]}
  %br/
  %p
    = f.submit
