<% content_for :body_tag do %>
    <body id="articles-show">
<% end %>
<%= link_to( image_tag('silk_icons/arrow_left.png') + ' list all articles',
    {:action => :index},
    {:id => 'create-new', :title => 'Go back to list of articles', :class => 'top-link'}) %>
    
<%= link_to image_tag('silk_icons/pencil.png') + ' edit',
    {:action => 'edit', :id => @article},
    {:alt => 'Edit', :title => 'Modify this article', :class => 'top-link'} %>
    
<%= link_to(image_tag('silk_icons/bin_closed.png') + ' delete',
    {:action => 'destroy', :id => @article},
    {:confirm => 'Are you sure?', :method => :delete, :alt => 'Delete', :title => 'Delete this article', :class => 'top-link'}) %>
    
<%= mail_to("",  
    image_tag('silk_icons/email.png') + ' email',
    {:subject => @article.title, :body => @page_url, :class => 'top-link', :title => 'Tell a friend about this article'}) %>
<br />
<h1><%=h @article.title %></h1>

<h3><%=h "by %s. %s since %s." % [@article.author_name, pluralize(@article.change_count, 'edit'), @article.created_at.to_s(:human)] %></h3>

<%= wrap_links wrap_in_paragraphs(@article.body) %>
